<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000"
        motion:motionInterpolator="easeInOut"
        motion:autoTransition="animateToEnd">
        <OnSwipe
            motion:touchAnchorId="@+id/splashImageView"
            motion:touchAnchorSide="right"
            motion:dragDirection="dragRight" />
        <KeyFrameSet>
            <KeyPosition
                motion:keyPositionType="deltaRelative"
                motion:percentY="0.25"
                motion:framePosition="50"
                motion:motionTarget="@+id/splashImageView"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/splashImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="128dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="128dp"
            motion:layout_constraintVertical_bias="0.48" />
        <Constraint
            android:id="@+id/splashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/splashImageView"
            motion:layout_constraintTop_toTopOf="@+id/splashImageView"
            motion:layout_constraintEnd_toStartOf="@+id/splashImageView"
            motion:layout_editor_absoluteX="175dp"
            motion:layout_editor_absoluteY="349dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/splashImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/splashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/splashImageView"
            motion:layout_constraintTop_toTopOf="@+id/splashImageView"
            motion:layout_constraintEnd_toStartOf="@+id/splashImageView"
            motion:layout_editor_absoluteX="198dp"
            motion:layout_editor_absoluteY="367dp"/>
    </ConstraintSet>
</MotionScene>